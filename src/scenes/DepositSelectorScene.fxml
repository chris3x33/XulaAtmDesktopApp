<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<VBox fx:controller="controllers.DepositSelectorController"
      xmlns:fx="http://javafx.com/fxml" alignment="center" spacing="15">

    <Label text="Choose an Account to deposit into" />

    <ListView fx:id="accountsListView" />

    <Button text="Choose" onAction="#runDeposit"/>
    <Button text="Back" onAction="#back" />

</VBox>